<!DOCTYPE html>
<html>
  <head>
    <title>CORD</title>
    <style>
      *,
      *:before *:after {
        box-sizing: border-box;
      }
      body {
        background-color: #1c7d5a;
      }
      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 200px;
        height: 100vh;
        background: white;
      }
      .header {
        color: rgb(31, 57, 5);
        text-align: center;
        padding: 15px;
      }
      #logo {
        height: 100px;
        font-size: 30px;
        line-height: 24px;
        padding: 15px;
        margin-bottom: 50px;
        color: #1c7d5a;
      }
      .toggle {
        position: fixed;
        top: 5px;
        left: 5px;
        background: black;
        color: white;
        border: none;
        font-size: 16px;
        cursor: pointer;
        display: none;
      }
      nav a {
        text-decoration: none;
        color: white;
      }
      nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        color: black;
        text-align: center;
        transition: max-height 0.5s;
      }
      nav ul li {
        padding: 5px;
        cursor: pointer;
      }
      nav ul li:hover {
        background-color: rgb(73, 220, 20);
      }
      nav ul li a:focus {
        background-color: rgb(73, 220, 20);
      }
      nav ul li a:active {
        background-color: rgb(73, 220, 20);
      }
      .container {
        line-height: 1.6;
        width: auto;
        margin: 0 auto 0 170px;
        padding: 70px;
      }
      @media (max-width: 767px) {
        .sidebar {
          margin-left: -170px;
        }
        .sidebar.show {
          margin-left: 0;
        }
        .header {
          float: none;
          background-color: black;
          font-size: 24px;
        }
        nav ul {
          background: rgb(139, 172, 86);
          max-height: 0;
          width: 100%;
        }
        nav ul li {
          width: 100%;
          padding: 15px;
        }
        .toggle {
          display: inline;
        }
        .container {
          width: 100%;
          margin-top: 50px;
          margin-left: 0;
        }
        .container.slide {
          margin-left: 170px;
        }
      }
      input#message {
        width: 900px;
        padding: 2px 2px;
        height: 35px;
      }
      #msg {
        position: fixed;
        bottom: 5%;
        left: 20%;
        display: flex;
      }
      #messages {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      #messages > li {
        padding: 0.5rem 1rem;
      }
      #messages > li:nth-child(odd) {
        background: #7ee075;
      }

      #messages > li:nth-child(even) {
        background: #bbe496;
      }
      #logout {
        position: fixed;
        bottom: 2%;
        left: 3%;
        padding: 15px;
        color: rgb(177, 206, 102);
        width: 100px;
        background-color: rgb(15, 94, 114);
        transition: width 0.35s;
        font-size: 20px;
        border-radius: 15px;
        display: inline-block;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        outline: none;
        color: #fff;
        background-color: #1e6169;
        border: none;
        border-radius: 15px;
        box-shadow: 0 1px #999;
      }
      img {
        height: 8%;
        position: fixed;
        top: 0%;
        left: 0%;
      }
    </style>

    <link rel="icon" type="image/x-icon" href="../../static/favicon.ico" />
  </head>
  <body>
    <nav class="sidebar">
      <div class="header"><a href="" id="logo"><%= name%></a><br /><br /></div>
      <ul id="activeUsers"></ul>
      <form method="post" action="/logout">
        <button type="submit" id="logout">logout</button>
      </form>
    </nav>
    <button class="toggle">â˜°</button>
    <div class="container">
      <div id="img">
        <img src="../../static/favicon.png" />
      </div>
      <div id="msg">
        <input
          type="text"
          id="message"
          autocomplete="off"
          placeholder="Message "
        />
        <button type="submit" id="send">Send</button>
      </div>
      <ul id="messages"></ul>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      const messages = document.getElementById("messages");
      const usernameInput = document.getElementById("username");
      let recipientUsernameInput = "";
      const messageInput = document.getElementById("message");
      const sendButton = document.getElementById("send");
      const activeUsers = document.getElementById("activeUsers");
      const usernameofsession = sessionStorage.getItem("usernameofsession");

      console.log(usernameofsession);

      activeUsers.addEventListener("click", () => {
        recipientUsernameInput = document.getElementById("x").innerHTML;
        console.log(recipientUsernameInput);
      });

      sendButton.addEventListener("click", function (e) {
        e.preventDefault();
        if (messageInput.value) {
          const li = document.createElement("li");
          li.textContent = messageInput.value;
          messages.appendChild(li);
          socket.emit(
            "private message",
            messageInput.value,
            recipientUsernameInput
          );
          messageInput.value = "";
        }
      });
      socket.on("private message", (msg) => {
        const li = document.createElement("li");
        li.textContent = msg;
        messages.appendChild(li);
        window.scrollTo(0, document.body.scrollHeight);
      });
      socket.on("active users", (users) => {
        activeUsers.innerHTML = "";
        users.forEach((user) => {
          const li = document.createElement("li");
          li.setAttribute("id", "x");
          li.textContent = user;
          activeUsers.appendChild(li);
        });
      });
      socket.on("request username", () => {
        socket.emit("set username", usernameofsession);
      });
      socket.on("error", (errorMsg) => {
        alert(errorMsg);
      });
    </script>
  </body>
</html>
