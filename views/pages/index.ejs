<!DOCTYPE html>
<html>
  <head>
    <title>CORD</title>
    <style>
      *,
      *:before *:after {
        box-sizing: border-box;
      }
      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 200px;
        height: 100vh;
        background: #1c7d5a;
      }
      .header {
        color: rgb(202, 218, 159);
        text-align: center;
        padding: 15px;
      }
      .logo {
        height: 100px;
        font-size: 24px;
        line-height: 24px;
        padding: 15px;
        margin-bottom: 50px;
      }
      .toggle {
        position: fixed;
        top: 5px;
        left: 5px;
        background: black;
        color: white;
        border: none;
        font-size: 16px;
        cursor: pointer;
        display: none;
      }
      nav a {
        text-decoration: none;
        color: white;
      }
      nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        color: white;
        text-align: center;
        transition: max-height 0.5s;
      }
      nav ul li {
        padding: 5px;
      }
      nav ul li:hover {
        background-color: crimson;
      }
      .container {
        line-height: 1.6;
        width: 100%;
        margin: 0 auto 0 170px;
        padding: 70px;
      }
      @media (max-width: 767px) {
        .sidebar {
          margin-left: -170px;
        }
        .sidebar.show {
          margin-left: 0;
        }
        .header {
          float: none;
        }
        nav ul {
          background: rgb(139, 172, 86);
          max-height: 0;
          width: 100%;
        }
        nav ul li {
          width: 100%;
          padding: 15px;
        }
        .toggle {
          display: inline;
        }
        .container {
          width: 100%;
          margin-top: 50px;
          margin-left: 0;
        }
        .container.slide {
          margin-left: 170px;
        }
      }
      input#message {
        width: 300px;
        padding: 10px 200px;
      }
      #msg {
        position: fixed;
        bottom: 5%;
        left: 20%;
        display: flex;
      }
      #messages {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      #messages > li {
        padding: 0.5rem 1rem;
      }
      #messages > li:nth-child(odd) {
        background: #efefef;
      }
      #logout {
        position: fixed;
        bottom: 2%;
        left: 3%;
        padding: 15px;
        color: rgb(177, 206, 102);
        width: 100px;
        background-color: rgb(15, 94, 114);
        transition: width 0.35s;
        /* -webkit-transition: width 0.35s; */
        font-size: 20px;
        border-radius: 15px;
        display: inline-block;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        outline: none;
        color: #fff;
        background-color: #1e6169;
        border: none;
        border-radius: 15px;
        box-shadow: 0 9px #999;
      }
    </style>
  </head>
  <body>
    <script type="text/javascript" src="./libsignal-protocol.js"></script>
    ;
    <nav class="sidebar">
      <div class="header">
        <a href="" class="logo"><%= name%></a><br /><br /><br /><br />
        <div class="allusers">
          <ul id="list"></ul>
        </div>
      </div>
      <ul id="activeUsers"></ul>
      <form method="post" action="/logout">
        <button type="submit" id="logout">logout</button>
      </form>
    </nav>
    <button class="toggle">â˜°</button>
    <div class="container">
      <div>
        <label for="username">Username:</label>
        <input type="text" id="username" />
        <button id="setUsername">Set Username</button>
      </div>
      <div>
        <label for="recipientUsername">Recipient:</label>
        <input type="text" id="recipientUsername" />
      </div>
      <div id="msg">
        <input
          type="text"
          id="message"
          autocomplete="off"
          placeholder="Message "
        />
        <button type="submit" id="send">Send</button>
      </div>
      <ul id="messages"></ul>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      const messages = document.getElementById("messages");
      const usernameInput = document.getElementById("username");
      const setUsernameButton = document.getElementById("setUsername");
      const recipientUsernameInput =
        document.getElementById("recipientUsername");
      const messageInput = document.getElementById("message");
      const sendButton = document.getElementById("send");
      const activeUsers = document.getElementById("activeUsers");
      setUsernameButton.addEventListener("click", () => {
        socket.emit("set username", usernameInput.value);
      });
      sendButton.addEventListener("click", () => {
        socket.emit(
          "private message",
          messageInput.value,
          recipientUsernameInput.value
        );
        messageInput.value = "";
      });
      socket.on("private message", (msg) => {
        const li = document.createElement("li");
        li.textContent = msg;
        messages.appendChild(li);
      });
      socket.on("active users", (users) => {
        activeUsers.innerHTML = "";
        users.forEach((user) => {
          const li = document.createElement("li");
          li.textContent = user;
          activeUsers.appendChild(li);
        });
      });
      socket.on("request username", () => {
        const username = prompt("Enter your username:");
        socket.emit("set username", username);
      });
      socket.on("error", (errorMsg) => {
        alert(errorMsg);
      });
    </script>
  </body>
</html>
